{
  "name": "@liftedinit/ui",
  "private": true,
  "version": "0.1.0",
  "description": "A shared library of components and helpers for Lifted user interfaces",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "copy-assets": "cp -r ./src/assets ./dist/assets",
    "prepare": "npm run build && npm run copy-assets",
    "test": "react-scripts test",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liftedinit/lifted-ui.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/liftedinit/lifted-ui/issues"
  },
  "homepage": "https://github.com/liftedinit/lifted-ui#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.8",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "dotenv": "^16.3.1",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "react-scripts": "5.0.1"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@fontsource/rubik": "^5.0.18",
    "@react-icons/all-files": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^4.0.0-beta.23",
    "react-router-dom": "^6.21.1",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "testing-library/no-debugging-utils": [
        "error",
        {
          "utilsToCheckFor": {
            "debug": false,
            "logRoles": true,
            "logDOM": true
          }
        }
      ]
    }
  }
}
